@model IEnumerable<Hotel_Bilyana.Models.Domain.ApplicationUser>
@{
    ViewData["Title"] = "User";
}

<h1>User</h1>
<p>
    <a asp-action="User_Create">Create New</a>
</p>
<table class="table">
    <thead>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>EGN</th>
            <th>Phone Number</th>
            <th>Active</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.EGN)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@ViewBag.UserRoles[item.Id]</td>
                <td>
                <a asp-action="User_Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="User_Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="User_Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
